        <TextBlock HorizontalAlignment="Left" Margin="62,195,0,0" TextWrapping="Wrap" Text="Bitcoin Wallet " VerticalAlignment="Top" Width="55"/>
        <TextBlock HorizontalAlignment="Left" Margin="116,75,0,0" TextWrapping="Wrap" Text="30000" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="117,137,0,0" TextWrapping="Wrap" Text="14000" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="121,195,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top"/>
        <ProgressBar Name="Payed" Value="0" Maximum="50000" HorizontalAlignment="Left" Height="16" Margin="177,75,0,0" VerticalAlignment="Top" Width="289"/>
